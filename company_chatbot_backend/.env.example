# Copy this file to .env and fill in values as appropriate for your environment.

# Application
APP_NAME="Company Chatbot Backend"
APP_DESCRIPTION="Ocean Professional themed API providing chat, authentication, and RAG+FAISS semantic retrieval."
APP_VERSION="0.1.0"

# Security
SECRET_KEY="change-me"

# Database (optional; in-memory used by default)
# Example: postgresql+psycopg://user:password@host:5432/dbname
POSTGRES_URL=""

# CORS
# Comma-separated list or ["*"] for previews
CORS_ALLOW_ORIGINS=["*"]

# Hosts (TrustedHostMiddleware)
# For development/preview, include "*" or leave unset. Set explicit hosts for production.
ALLOWED_HOSTS=["*", "localhost", "127.0.0.1", "0.0.0.0"]

# RAG / Embeddings
EMBEDDING_DIM=384

# OpenAI Integration
# Required for LLM features (chat answers synthesized with OpenAI). If missing, the app falls back to heuristic responses.
OPENAI_API_KEY=""
# Default model; override as needed, e.g., "gpt-4o-mini" or "gpt-4o"
OPENAI_MODEL="gpt-4o-mini"
# For custom gateways or proxies; default points to official API
OPENAI_BASE_URL="https://api.openai.com/v1"

# Server port (used by server.py optional)
# PORT=3001
