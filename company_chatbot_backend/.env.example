# Application
APP_NAME=Company Chatbot Backend
APP_DESCRIPTION=Ocean Professional themed API providing chat, authentication, and RAG+FAISS semantic retrieval.
APP_VERSION=0.1.0

# Security
SECRET_KEY=CHANGE_ME_MIN_32_CHARS
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database (SQLAlchemy style URL)
# Example (psycopg3): postgresql+psycopg://user:password@host:5432/company_chatbot_db
POSTGRES_URL=postgresql+psycopg://user:password@localhost:5432/company_chatbot_db

# CORS and Hosts
# Comma-separated origins or leave * for previews
CORS_ALLOW_ORIGINS=["*"]
# List of allowed hosts; include "*" to disable TrustedHostMiddleware for previews
ALLOWED_HOSTS=["*"]

# Embeddings / LLM
EMBEDDING_DIM=384

# OpenAI (optional for LLM-powered answers)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1
